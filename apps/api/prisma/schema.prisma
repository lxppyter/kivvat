generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ComplianceStatus {
  COMPLIANT
  NON_COMPLIANT
  PENDING
  NOT_APPLICABLE
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Role {
  STAFF
  ADMIN
  AUDITOR
}

enum Plan {
  FREE
  CORE
  PRO
  ENTERPRISE
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password          String
  hashedRefreshToken String? @map("hashed_refresh_token")
  name              String?
  companyName       String?  @map("company_name")
  role      Role     @default(STAFF)
  plan      Plan     @default(FREE)
  licenseKey String? @unique @map("license_key")
  licenseExpiresAt DateTime? @map("license_expires_at")
  subscriptionStatus String? @map("subscription_status") // 'active', 'cancelled', 'refunded'
  reports   ScanReport[]
  assets    Asset[]
  tasks     Task[]
  incidents Incident[]
  vendors   Vendor[]
  policyAssignments PolicyAssignment[]
  ownedAssignments  PolicyAssignment[] @relation("OwnedAssignments")
  createdShares     PolicyShare[]      @relation("CreatedShares")
  auditShares AuditShare[]
  evidences     Evidence[]
  subscription Subscription?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")
  
  @@map("users")
}

model Subscription {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  plan      String   @default("FREE") // FREE, COMPLIANCE CORE, TRUST ARCHITECT, TOTAL AUTHORITY
  status    String   @default("ACTIVE") // ACTIVE, CANCELED, EXPIRED
  
  startDate DateTime @default(now()) @map("start_date")
  endDate   DateTime? @map("end_date")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  @@map("subscriptions")
}

model Asset {
  id        String   @id @default(uuid())
  provider  String   // AWS, AZURE
  type      String   // EC2, S3, IAM_USER
  name      String
  region    String?
  status    String?  // RUNNING, STOPPED, ACTIVE
  details   Json?    // Extra metadata (instance type, size, etc.)
  
  userId    String     @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  
  
  history   AssetHistory[]
  
  updatedAt DateTime @updatedAt @map("updated_at")
  
  @@map("assets")
}

model AssetHistory {
  id        String   @id @default(uuid())
  assetId   String   @map("asset_id")
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  oldConfig Json?    @map("old_config") // Snapshot before change
  newConfig Json?    @map("new_config") // Snapshot after change
  diff      Json?    // Computed difference
  changedBy String?  @map("changed_by") // User ID or 'SYSTEM'
  createdAt DateTime @default(now()) @map("created_at")

  @@map("asset_history")
}

model ScanReport {
  id        String   @id @default(uuid())
  provider  String
  score     Int
  status    String   // 'COMPLETED', 'FAILED'
  results   Json     // Stores the detailed ScanResult[] array
  
  userId    String     @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now()) @map("created_at")

  @@map("scan_reports")
}

// e.g. "ISO 27001", "GDPR"
model ComplianceStandard {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  controls    Control[]
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt      @map("updated_at")

  @@map("compliance_standards")
}

// e.g. "9.1 Access Control"
model Control {
  id          String             @id @default(uuid())
  standardId  String             @map("standard_id")
  code        String             // "9.1", "A.5.1"
  name        String
  description String?
  standard    ComplianceStandard @relation(fields: [standardId], references: [id])
  gaps        GapAnalysis[]
  createdAt   DateTime           @default(now()) @map("created_at")
  updatedAt   DateTime           @updatedAt      @map("updated_at")

  @@map("controls")
}

// Raw evidence collected from cloud providers
model Evidence {
  id          String        @id @default(uuid())
  source      String        // "AWS", "Azure", "GCP"
  resourceId  String?       @map("resource_id") // "s3-bucket-xyz"
  checkName   String        @map("check_name") // "S3 Public Access"
  result      Json          // Raw result data
  screenshotPath String?    @map("screenshot_path")   // Path to local file or S3 URL
  timestamp   DateTime      @default(now())
  
  userId      String?       @map("user_id")
  user        User?         @relation(fields: [userId], references: [id])

  gaps        GapAnalysis[]

  @@map("evidences")
}

// Mapping of Evidence to a Control to determine status
model GapAnalysis {
  id          String           @id @default(uuid())
  controlId   String           @map("control_id")
  evidenceId  String           @map("evidence_id")
  status      ComplianceStatus
  details     String?
  control     Control          @relation(fields: [controlId], references: [id])
  evidence    Evidence         @relation(fields: [evidenceId], references: [id])
  tasks       Task[]
  createdAt   DateTime         @default(now()) @map("created_at")
  updatedAt   DateTime         @updatedAt      @map("updated_at")

  @@map("gap_analyses")
}

// Task assigned to fix a compliance gap
model Task {
  id            String      @id @default(uuid())
  title         String
  description   String?
  assigneeId    String?     @map("assignee_id")
  gapAnalysisId String?     @map("gap_analysis_id")
  status        TaskStatus  @default(OPEN)
  dueDate       DateTime?   @map("due_date")
  assignee      User?       @relation(fields: [assigneeId], references: [id])
  gapAnalysis   GapAnalysis? @relation(fields: [gapAnalysisId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt      @map("updated_at")

  @@map("tasks")
}

model PolicyTemplate {
  id          String   @id @default(uuid())
  name        String   
  content     String   @db.Text
  category    String   // "ISO 27001", "HR", "General"
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")
  version     String   @default("1.0") 
  assignments PolicyAssignment[]
  history     PolicyVersion[]
  shares      PolicyShare[]

  @@map("policy_templates")
}

model PolicyVersion {
  id          String         @id @default(uuid())
  policyId    String         @map("policy_id")
  version     String         // e.g. "1.0", "1.1"
  content     String         @db.Text
  createdAt   DateTime       @default(now()) @map("created_at")
  
  policy      PolicyTemplate @relation(fields: [policyId], references: [id])

  @@map("policy_versions")
}

model PolicyAssignment {
  id          String        @id @default(uuid())
  policyId    String        @map("policy_id")
  userId      String?       @map("user_id") // Made nullable for public signers
  status      String        @default("PENDING") // PENDING, SIGNED, OVERDUE
  signedAt    DateTime?     @map("signed_at")
  signerName  String?       @map("signer_name") // For public signers
  signerEmail String?       @map("signer_email") // For public signers
  ipAddress   String?       @map("ip_address")
  userAgent   String?       @map("user_agent")
  
  user        User?         @relation(fields: [userId], references: [id])
  policy      PolicyTemplate @relation(fields: [policyId], references: [id])
  
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt      @map("updated_at")

  ownerId     String?       @map("owner_id")
  owner       User?         @relation("OwnedAssignments", fields: [ownerId], references: [id])

  // Removed unique constraint to allow multiple public signers for same policy
  // @@unique([userId, policyId]) 
  @@map("policy_assignments")
}

model PolicyShare {
  id        String         @id @default(uuid())
  token     String         @unique
  policyId  String?        @map("policy_id")
  policy    PolicyTemplate? @relation(fields: [policyId], references: [id])
  expiresAt DateTime?      @map("expires_at")
  createdAt DateTime       @default(now()) @map("created_at")
  active    Boolean        @default(true)
  
  creatorId String?        @map("creator_id")
  creator   User?          @relation("CreatedShares", fields: [creatorId], references: [id])

  @@map("policy_shares")
}

model AuditShare {
  id        String   @id @default(uuid())
  token     String   @unique
  name      String   // e.g. "External Audit 2025-Q1"
  expiresAt DateTime @map("expires_at")
  
  userId    String     @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  
  createdAt DateTime @default(now()) @map("created_at")

  @@map("audit_shares")
}

model Incident {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  severity    String   // CRITICAL, HIGH, MEDIUM, LOW
  status      String   @default("OPEN") // OPEN, INVESTIGATING, RESOLVED, FALSE_POSITIVE
  source      String   @default("MANUAL") // MANUAL, AUTOMATED
  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")

  @@map("incidents")

}

model Vendor {
  id          String   @id @default(uuid())
  name        String
  contactName String?  @map("contact_name")
  email       String?
  riskScore   String   @default("LOW") // LOW, MEDIUM, HIGH, CRITICAL
  hasIso27001 Boolean  @default(false) @map("has_iso27001")
  hasSoc2     Boolean  @default(false) @map("has_soc2")
  hasGdpr     Boolean  @default(false) @map("has_gdpr")

  userId      String   @map("user_id")
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt      @map("updated_at")

  @@map("vendors")
}
